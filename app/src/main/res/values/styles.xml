<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorBlackTank</item>

        <item name="colorPrimary">@color/colorPrimary</item>

        <item name="colorAccent">@color/colorKhakiTank</item>
        <item name="android:colorForeground">@color/foreground_material_light</item>
        <item name="android:textColorPrimary">@color/colorKhakiTank</item>
        <item name="android:textColorPrimaryInverse">@color/colorDarkkhakiTank</item>
        <item name="android:textColorSecondary">@color/colorDarkkhakiTank</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TankTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorKhakiTank</item>
        <item name="android:colorForeground">@color/foreground_material_light</item>
        <item name="android:textColorPrimary">@color/colorKhakiTank</item>
        <item name="android:textColorPrimaryInverse">@color/colorDarkkhakiTank</item>
        <item name="android:textColorSecondary">@color/colorDarkkhakiTank</item>
    </style>

    <style name="MenuTankTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorKhakiTank</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorKhakiTank</item>
        <item name="android:colorForeground">@color/colorKhakiTank</item>
        <item name="android:textColorPrimary">@color/colorDarkkhakiTank</item>
        <item name="android:textColorPrimaryInverse">@color/colorKhakiTank</item>
        <item name="android:textColorSecondary">@color/colorDarkkhakiTank</item>
        <item name="android:colorBackground">@color/colorBlackTank</item>
        <item name="android:windowBackground">@color/colorBlackTank</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
